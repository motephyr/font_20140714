<div class="row">
  <div class="col-md-12">
    <%= link_to "回上一頁",'/',class: "btn btn-lg btn-warning"  %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h1>Game N</h1>
    <h2>參賽人員列表<%= link_to "新增人員",new_game_visitor_path(@game),class: "btn btn-lg btn-info"  %></h2>
      <% if @visitors.present? %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>代號</th>
          <th>照片</th>
          <th>名字</th>
          <th>加入比賽</th>  
        </tr>
      </thead>
      <tbody>

        <% @visitors.each do |v| %>
        <tr>
          <td><%= v.number %></td>
          <td><%= render_visitor_photo(v.image,"thumb") %></td>
          <td><%= v.name %></td>
          <td><input type="checkbox" name="joinGame" value="<%= v.number %>" /></td>
        </tr>
        <% end %>

        <tr>
          <td></td>
          <td></td>
          <td></td>
          <td><input type="checkbox" name="allSelect" value="" />全選</td>
        </tr>
      </tbody>
    </table>
    <% else %>
    尚無參賽人員
    <% end %>
    <br>
    <%= link_to "Stage1",stage1_game_path(@game),class: "btn btn-lg btn-success"  %>
    <%= link_to "Stage2","/",class: "btn btn-lg btn-success"  %>
    <%= link_to "Stage3","/",class: "btn btn-lg btn-success"  %>
  </div>
</div>
