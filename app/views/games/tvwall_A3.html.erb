<% content_for :stylesheets do %>
<style type="text/css">

body,.container{
  background-color: #000000;
  width: 100%;
  height: 100%;
}

h4 {
  color: #ffffff
}

.border_radius{
  border: 2px solid #D6D6D6;
  -webkit-border-radius: 100px;
  -moz-border-radius: 100px;
  border-radius: 100px;
}

.block{
  opacity: 0.9;
  
  //border: 1px solid white;
  
}

.every_writer_box_down{
  float:left;
  padding-top:25%;
  width:50%;
}


.canvas_box{

  z-index:1;
  display:block;
  margin:0 auto;
}

.correct{
  display:none;
  z-index:10;
  position:absolute;
  left:120px;
  top:120px;
}
</style>
<% end %>
<div style="margin:0 auto; width:40%;height:100%;">


  <% @visitors.each_with_index do |x,index| %>
  <div class="visitor block every_writer_box_down" style="padding:15% 2% 5% 2%">
    <div style="width:90%;margin:2% auto;">
      <%= render_gamer_photo(x.image,"thumb",50,50) %>
      <h4 style="display:inline;"><%= x.name %></h4>
      <%#= render_gamer_photo(x.image,"thumb",50,50) %>
    </div>
        <div style="position:relative;">
      <canvas id="origin_<%= x.number %>" class="orgincanvas canvas_box" ></canvas>
      <img id="yes_<%= x.number %>" src="/assets/O-mark.png" height="95" class="correct" ></img>
    </div>
  </div>
  <% end %>


</div>

<% content_for :javascripts do %>
<%= javascript_include_tag 'server' %>
<script>

var receiveSubmitHandler = function(o){
  $('#visitor_'+o.user_id).css("background-color", "#f0f0f0");
};
window.timeRemaining = parseInt(<%= @second %>);
window.alarm = null;

$(document).ready(function() {
  CM.prop({
    width: 500,
    height: 500,
    lineWidth: 15,
    lineColor: '#ffffff',
    targetZoomScale: 0.40,
    responsiveByParent: true,
    backgroundImage: '/assets/block.png'
  });
  <% @visitors.each do |visitor| %>
  CM.reg('origin_<%= visitor.number %>');
  <% end %>

  window.chatApp = new ChatApp(500,500,'0');
  window.chatApp.bindEvents();


});
</script>
<% end %>